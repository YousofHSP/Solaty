<!-- محتوای اصلی: فقط نوار زیر هدر -->
<main class="dscore-main">
    <section class="dscore-toolbar" aria-label="نوار راهبری بالای کارت‌ها">
      <nav class="dscore-toolbar__trail" aria-label="مسیر">
        <a class="dscore-trail__item is-muted" href="#">مشاوران</a>
        <div class="dscore-trail__divider" aria-hidden="true">
          <img src="images/Alt Arrow Left.svg" alt=""/>
        </div>
        <a class="dscore-trail__item is-active" href="#">لاولایف</a>
      </nav>

      <!-- چپ: متای کوچک (دلخواه) -->
      <div class="dscore-toolbar__meta">
        <!-- مثال: شمارنده/راهنما/توضیح کوتاه -->
        <span class="dscore-meta__text">لیست مشاورهایی که اینجا هستن تا همراهت باشن</span>
      </div>
    </section>
    
    <section class="list-toolbar v2" dir="rtl" aria-label="نوار بالای لیست">
      <!-- کپسولِ مرتب‌سازی -->
      <button class="pill pill--wide" type="button">
        <img class="pill__menu" src="images/sort.svg" alt="" aria-hidden="true">
        <span class="pill__title">مرتب سازی</span>
        <span class="pill__muted">محبوب ترین ها</span>
        <img class="pill__chev" src="images/Alt Arrow Down.svg" alt="" aria-hidden="true">
      </button>
      <!-- فاصلهٔ افقی -->
      <span class="pill-gap"></span>
      <!-- کپسولِ نزدیک‌ترین نوبت -->
      <button class="pill pill--wide" type="button">
        <img class="pill__menu" src="images/sort.svg" alt="" aria-hidden="true">
        <span class="pill__title">نزدیک‌ترین نوبت</span>
        <span class="pill__muted">تا ۳ روز آینده</span>
        <img class="pill__chev2" src="images/Alt Arrow Down.svg" alt="" aria-hidden="true">
      </button>
    </section>


    <!-- ستون چپ: لیست مشاورها -->
    <article class="coach-card" dir="rtl">    
      <div class="pc-row pc-row--padded">
        <span class="pc-badge">
          <i class="pc-badge__like">
            <img src="images/like2.svg" alt=""/>
          </i>
          ۹۷٪ پیشنهاد کاربران
        </span>

        <span class="pc-rating">
          <img src="images/Star2.svg" alt="">
          ۴.۵/۵ از (۳۲۰ نظر) 
        </span>
      </div>

      <!-- هدر: آیکن دایره‌ای سمت راست + عنوان و زیرعنوان -->
      <header class="pc-head v2">
        <div class="pc-iconCircle">
          <img src="images/image (10).svg" alt="">
        </div>
        <img class="pc-badgePink" src="images/Group 47861.svg" alt="" aria-hidden="true">
        <div class="pc-titleBlock">
          <h3 class="pc-title">نسرین معصومی</h3>
          <div class="pc-subtitle">متخصص زوج درمانی و روان درمانگر شناختی</div>
        </div>
      </header>

      <hr class="pc-sep"/>

      <!-- توضیحات -->
  
      <!-- نوار وضعیت بازدید -->
      <div class="pc-softNote">
        <span class="dot-pink">
          <img src="images/tick-circle2.svg" alt=""/>
        </span>
        ۱۲۳۲ نوبت موفق در نوبیتو
      </div>

      <div class="pc-infoRow">
        <img  src="images/Ticket Sale.svg" alt="">
        <span class="val">۴۵۰,۰۰۰ تومان / جلسه آنلاین ۴۵ دقیقه ای</span>
      </div>

      <!-- ساعت کاری -->
      <div class="pc-infoRow">
        <img  src="images/Clock Circle.svg" alt="">
        <span class="val">اولین زمان آزاد: سه‌شنبه ۵ تیر، ساعت ۱۹:۰۰</span>
      </div>
      <hr class="pc-sep2"/>

      <div class="pc-actions">
        <button class="pc-pill">زوج‌درمانی</button>
        <button class="pc-pill">درمان خیانت</button>
        <button class="pc-pill">ارتباط باخانواده همسر</button>
      </div>
      <!-- آدرس -->
      <div class="pc-infoRow2">
        <img  src="images/Map Point.svg" alt="">
        <span class="label">نشانی :</span>
        <span class="val">تهران، بلوار کشاورز، خیابان فلسطین، کوچه ۲۴، ساختمان لاله</span>
      </div>
      <!-- فوتر: دکمه مسیر‌یابی (استایل مثل طرح) -->
      <footer class="pc-foot v2">
        <button class="btn-route">
          <span class="btn-route__bubble">
            <img src="images/arrow-left.svg" alt="">
          </span>
          <span class="btn-route__label">دریافت نوبت</span>
        </button>
      </footer>
    </article>
    
