    <!-- ستون راست فیلترها -->
<aside class="filters-col" dir="rtl">
  <!-- 1) فیلترهای انتخاب‌شده -->
  <article class="fcard fcard--chips">
    <header class="fcard__head">
      <h3 class="fcard__title">
        <img src="images/filter.svg" alt="" aria-hidden="true" />
        فیلترهای انتخاب شده
      </h3>
      <span class="fc-badge">۳</span>
      <button class="link-clear" type="button">حذف فیلترها</button>
    </header>
    <div class="chips">
      <button class="chip"> <span aria-hidden="true">
        <img src="images/close-circle.svg" alt=""/>
      </span> ویزیت آنلاین </button>
      <button class="chip"><span aria-hidden="true">
        <img src="images/close-circle.svg" alt=""/>
      </span>روانشناسی </button>
      <button class="chip"><span aria-hidden="true">
        <img src="images/close-circle.svg" alt=""/>
      </span>مدرک تخصصی </button>
    </div>
  </article>

  <!-- 2) تخصص -->
  <article class="fcard">
    <header class="fcard__head">
      <h3 class="fcard__title">تخصص</h3>
      <button class="fc-caret" type="button" aria-label="باز/بسته">
        <img src="images/Alt Arrow Down.svg" alt=""/>
      </button>
    </header>

    <label class="search">
      <input type="search" placeholder="روان" />
      <span class="search__icon" aria-hidden="true">
        <img src="images/Minimalistic Magnifer.svg" alt=""/>
      </span>
    </label>

    <ul class="checklist">
      <li>
        <label class="check">
          <input type="checkbox" checked />
          <i></i><span>روانکاوی</span>
        </label>
      </li>
      <li>
        <label class="check">
          <input type="checkbox" />
          <i></i><span>مشاوره ازدواج</span>
        </label>
      </li>
      <li>
        <label class="check">
          <input type="checkbox" />
          <i></i><span>مشاوره طلاق و جدایی آگاهانه</span>
        </label>
      </li>
      <li>
        <label class="check">
          <input type="checkbox" />
          <i></i><span>درمان خیانت</span>
        </label>
      </li>
      <li>
        <label class="check">
          <input type="checkbox" />
          <i></i><span>بازسازی رابطه بعد از خیانت</span>
        </label>
      </li>
    </ul>
  </article>

  <!-- 3) میزان تجربه -->
  <article class="fcard">
    <header class="fcard__head">
      <h3 class="fcard__title">میزان تجربه</h3>
      <button class="fc-caret" type="button" aria-label="باز/بسته">
        <img src="images/Alt Arrow Down.svg" alt=""/>
      </button>
    </header>

    <ul class="checklist checklist--tight">
      <li>
        <label class="check">
          <input type="checkbox" checked />
          <i></i><span>همه</span>
        </label>
      </li>
      <li>
        <label class="check">
          <input type="checkbox" />
          <i></i><span>کمتر از ۵ سال</span>
        </label>
      </li>
      <li>
        <label class="check">
          <input type="checkbox" />
          <i></i><span>بین ۵ تا ۱۰ سال</span>
        </label>
      </li>
      <li>
        <label class="check">
          <input type="checkbox" />
          <i></i><span>بالای ۱۰ سال</span>
        </label>
      </li>
    </ul>
  </article>

  <!-- 4) هزینه جلسه (+ جنسیت) -->
  <article class="fcard">
    <header class="fcard__head">
      <h3 class="fcard__title">هزینه جلسه</h3>
      <button class="fc-caret" type="button" aria-label="باز/بسته">
        <img src="images/Alt Arrow Down.svg" alt=""/>
      </button>
    </header>

    <div class="price">
      <div class="price__badge">۵۰۰,۰۰۰ تا ۱,۰۰۰۰ </div>
      <div class="price__track">
        <div class="price__fill" style="--from:25%; --to:70%"></div>
        <div class="price__knob" style="--pos:25%"></div>
        <div class="price__knob" style="--pos:70%"></div>
      </div>
      <div class="price__hint">بین 10 هزارتومان تا 500 هزارتومان</div>
    </div>
  </article>
  
  <article class="fcard">
    <header class="fcard__head">
      <h3 class="fcard__title">جنسیت</h3>
      <button class="fc-caret" type="button" aria-label="باز/بسته">
        <img src="images/Alt Arrow Down.svg" alt=""/>
      </button>
    </header>
    <div class="radios-inline" role="radiogroup" aria-label="جنسیت">
      <label class="radio2 radio3">
        <input type="radio" name="gender" checked />
        <i></i><span>تفاوتی ندارد</span>
      </label>
      <label class="radio2">
        <input type="radio" name="gender" />
        <i></i><span>آقا</span>
      </label>
      <label class="radio2">
        <input type="radio" name="gender" />
        <i></i><span>خانم</span>
      </label>
    </div>
  </article>
